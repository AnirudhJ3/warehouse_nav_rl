<?xml version="1.0" encoding="utf-8"?>
<mujoco>
    <option timestep="0.002" integrator="RK4">
        <flag contact="enable" />
    </option>

    <default>
        <joint armature="1" damping="1" limited="true"/>
        <geom conaffinity="1" condim="3" friction="1 0.5 0.5" margin="0.01"/>
    </default>

    <asset>
        <material name="floor" rgba=".5 .5 .5 1"/>
        <material name="robot" rgba=".1 .3 .7 1"/>
        <material name="obstacle" rgba=".7 .3 .1 1"/>
    </asset>

    <worldbody>
        <!-- Floor -->
        <geom name="floor" pos="0 0 0" size="10 10 0.1" type="plane" material="floor"/>
        
        <!-- Robot -->
        <body name="robot" pos="0 0 0.1">
            <joint name="robot_x" type="slide" axis="1 0 0" pos="0 0 0" range="-10 10"/>
            <joint name="robot_y" type="slide" axis="0 1 0" pos="0 0 0" range="-10 10"/>
            <joint name="robot_rot" type="hinge" axis="0 0 1" pos="0 0 0" range="-3.14159 3.14159"/>
            <geom name="robot_body" type="cylinder" size="0.3 0.1" material="robot"/>
            
            <!-- Wheels (visual only) -->
            <geom name="wheel1" type="cylinder" size="0.1 0.02" pos="0.2 0.2 0" material="robot"/>
            <geom name="wheel2" type="cylinder" size="0.1 0.02" pos="0.2 -0.2 0" material="robot"/>
            <geom name="wheel3" type="cylinder" size="0.1 0.02" pos="-0.2 0.2 0" material="robot"/>
            <geom name="wheel4" type="cylinder" size="0.1 0.02" pos="-0.2 -0.2 0" material="robot"/>
        </body>

        <!-- Static Obstacles -->
        <body name="obstacles" pos="0 0 0.3">
            <!-- Warehouse shelves -->
            <geom name="shelf1" type="box" size="0.3 2.0 0.3" pos="2 2 0" material="obstacle"/>
            <geom name="shelf2" type="box" size="0.3 2.0 0.3" pos="2 -2 0" material="obstacle"/>
            <geom name="shelf3" type="box" size="0.3 2.0 0.3" pos="-2 2 0" material="obstacle"/>
            <geom name="shelf4" type="box" size="0.3 2.0 0.3" pos="-2 -2 0" material="obstacle"/>
            
            <!-- Boundary walls -->
            <geom name="wall1" type="box" size="10 0.1 0.5" pos="0 10 0" material="obstacle"/>
            <geom name="wall2" type="box" size="10 0.1 0.5" pos="0 -10 0" material="obstacle"/>
            <geom name="wall3" type="box" size="0.1 10 0.5" pos="10 0 0" material="obstacle"/>
            <geom name="wall4" type="box" size="0.1 10 0.5" pos="-10 0 0" material="obstacle"/>
        </body>
    </worldbody>

    <actuator>
        <!-- Robot control -->
        <motor name="right_wheel" joint="robot_rot" gear="1"/>
        <motor name="left_wheel" joint="robot_rot" gear="-1"/>
    </actuator>

    <sensor>
        <!-- Robot sensors -->
        <jointpos name="robot_x_sensor" joint="robot_x"/>
        <jointpos name="robot_y_sensor" joint="robot_y"/>
        <jointpos name="robot_rot_sensor" joint="robot_rot"/>
    </sensor>
</mujoco> 